<div class="container">
	<form action="/checkin" method="POST">
	<h3>When would you like to come?</h3>

	<div class="form-group">
			<label for="exampleInputName">Name:</label>
			<input type="text" class="form-control" id="exampleInputName" placeholder="Your name" name="username" />
	</div>

	<div class="form-group">
			<label for="exampleInputPhone">Phone:</label>
			<input type="tel" class="form-control" id="exampleInputPhone" placeholder="Your phone" name="userphone" />
	</div>

	<div class="form-group">
			<label for="exampleInputDateTime">Date and time you'll come:</label>
			<input type="datetime-local" class="form-control" id="exampleInputDateTime" placeholder="Your name" name="date_time" />
	</div>

	<div class="form-group">
		<label for="exampleInputMaster">Choose your barber:</label>
		<select name="master" id="exampleInputMaster">
		  <option>Mr. Brown</option>
		  <option>Mr. Green</option>
		  <option>Mr. White</option>
		</select>
	</div>

	<div class="form-group">
		<label for="exampleInputColor">Available color:</label>
		<select id="exampleInputColor"  class="form-control" name="colorpicker">
		  <option value="#7bd148">Green</option>
		  <option value="#5484ed">Bold blue</option>
		  <option value="#a4bdfc">Blue</option>
		  <option value="#46d6db">Turquoise</option>
		  <option value="#7ae7bf">Light green</option>
		  <option value="#51b749">Bold green</option>
		  <option value="#fbd75b">Yellow</option>
		  <option value="#ffb878">Orange</option>
		  <option value="#ff887c">Red</option>
		  <option value="#dc2127">Bold red</option>
		  <option value="#dbadff">Purple</option>
		  <option value="#e1e1e1">Gray</option>
		</select>
	</div>

	

	<button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<script src="/js/scripts.js"></script>